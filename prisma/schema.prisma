// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StatusEnum {
  PENDING
  SUCCESS
  FAILED
}

model user {
  id         Int        @id @default(autoincrement())
  first_name String
  last_name  String
  email      String     @unique
  password   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  todolist   todolist[]

  @@unique([id, email])
}

model todolist {
  id          Int        @id @default(autoincrement())
  user_id     Int
  description String
  status      StatusEnum
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        user       @relation(fields: [user_id], references: [id])
}
